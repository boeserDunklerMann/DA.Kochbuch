<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DA.Kochbuch.App.RecipePage"
             Title="Rezept"
			 xmlns:mvvm="clr-namespace:DA.Kochbuch.App.MVVM">
	<ContentPage.BindingContext>
		<mvvm:RecipeVM/>
	</ContentPage.BindingContext>
	
    <VerticalStackLayout>
		<HorizontalStackLayout>
			<Label Text="Rezept von:"/>
			<Label Text="{Binding SelectedRecipe.User.Name}"/>
		</HorizontalStackLayout>
		<Label
			Text="Zutaten"
			/>
		<ListView ItemsSource="{Binding SelectedRecipe.Ingredients}" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<HorizontalStackLayout>
						<Label Text="{Binding Amount}"/>
						<Label Text="{Binding Unit.Name}"/>
						<Label Text="{Binding Name}"/>
					</HorizontalStackLayout>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		<Label
			Text="Zubereitung"
			/>
		<Label
			Text="{Binding SelectedRecipe.CookInstructon}"
			/>
	</VerticalStackLayout>
</ContentPage>